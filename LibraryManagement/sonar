pipeline {
    agent any
stages{
stage('Build') {
            steps {
                echo 'Building..'
            }
        }

stage('Sonarcube') {
    environment {
        scannerHome = tool 'SonarQubeScanner'
    }
    steps {
        withSonarcubeEnv('sonarcube') {
            sh "${scannerHome}/bin/sonar-scanner"
        }
        timeout(time: 10, unit: 'MINUTES') {
            waitForQualityGate abortPipeline: true
            
        }
       stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
         stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
  }
  
}
}
}
